{
  "manifest_version": 3,
  "name": "Sahayak Fraud Shield",
  "version": "1.0",
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>", "file:///*", "http://*/*", "https://*/*"], 
      "js": ["content.js"],
      "css": ["extension-styles.css"],
      "run_at": "document_end"
    }
  ],
  "host_permissions": ["http://127.0.0.1:8000/*"]
}